<div>
  <h1><%= @product.title %></h1>
  <h3><%= @product.url %></h3>
  <h5><%= @product.category.label %></h5>
  <p><%= @product.description %></p>
  <p>Release date: <%= @product.release_date %></p>
</div>
<div>
  <% if @product.reviews.count > 0 %>
    <%= link_to "Donner mon avis", new_product_review_path(@product), class: "button" %>
    <p>Moyenne des avis : <%= @moyenne %></p>
    <% @product.reviews.each do |review| %>
      <div class="review">
        <%= review.content %>
        <%= review.vote %>
      </div>
    <% end %>
  <% else %>
    <p class="comment">Aucun commentaire. Soyez le premier Ã  donner votre avis</p>
    <%= link_to "Donner mon avis", new_product_review_path(@product), class: "button" %>
  <% end %>
</div>

