<div class="navbar navbar-expand-sm navbar-light navbar-custom">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "logo_techstart.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to products_path, class: "nav-link" do %>
           Catégorie <i class="fas fa-angle-down"></i>
          <% end %>
        </li>
        <li class="nav-item"><%= link_to "Ajouter un produit", new_product_path, class: "nav-link" %></li>
        <li class="nav-item dropdown">
          <%= image_tag "avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to edit_user_registration_path do %>
              <span class="dropdown-item" id="first-item">
                <i class="far fa-user-circle ico-navbar"></i> Mon profil
              </span>
            <% end %>
            <%= link_to root_path do %>
              <span class="dropdown-item">
                <i class="fas fa-rocket ico-navbar"></i> Mes produits
              </span>
            <% end %>
            <%= link_to root_path do %>
              <span class="dropdown-item">
                <i class="far fa-comment-alt ico-navbar"></i> Mes commentaires
              </span>
            <% end %>
            <%= link_to destroy_user_session_path do %>
              <span class="dropdown-item" id="last-item">
                <i class="fas fa-power-off ico-navbar"></i> Déconnexion
              </span>
            <% end %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Se connecter / S'inscrire", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
